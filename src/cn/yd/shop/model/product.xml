<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- -->
<mapper namespace="cn.yd.shop.model.Product">
	<insert id="save" parameterType="cn.yd.shop.model.Product">
		insert into product (name,price,remark,pic) values (#{name},#{price},#{remark},#{pic})
	</insert>
	
	<update id="update" parameterType="cn.yd.shop.model.Product">
		update product set name=#{name},price=#{price},date=#{date},remark=#{remark} where id=#{id}
	</update>
	
	<delete id="delete" parameterType="int">
		delete from product where id=#{id}
	</delete>
	
	<!-- resultType: 指定的是集合里面存储的类型,而非返回的类型(查询多个数据肯定返回集合类型) -->
 	<select id="queryByName" parameterType="String" resultType="cn.yd.shop.model.Product">
 		select * from product where name like #{abc}
 	</select>
 	
</mapper>